<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar-lewagon d-flex align-items-center justify-content-between p-3">
      <%= link_to 'Simple Airbnb', root_path, class: "logo" %>
      <%= link_to 'Search', root_path, class: "btn btn-outline-success" %>
      <%= link_to 'Add Flat', new_flat_path, class: "btn btn-outline-primary" %>

    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
